<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <i data-lucide="user-plus" style="width: 48px; height: 48px; color: #10b981;"></i>
            <h1>ETF Tracker</h1>
            <p>Crea il tuo account</p>
        </div>

        <div id="alertContainer"></div>

        <form id="registerForm" class="auth-form">
            <div class="form-group">
                <label for="email">Email</label>
                <input
                    type="email"
                    id="email"
                    placeholder="tu@esempio.com"
                    required
                    autocomplete="email"
                >
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input
                    type="password"
                    id="password"
                    placeholder="••••••••"
                    required
                    autocomplete="new-password"
                    minlength="6"
                >
                <div class="help-text">Minimo 6 caratteri</div>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Conferma Password</label>
                <input
                    type="password"
                    id="confirmPassword"
                    placeholder="••••••••"
                    required
                    autocomplete="new-password"
                    minlength="6"
                >
            </div>

            <button type="submit" class="btn btn-success btn-full" id="registerBtn">
                <i data-lucide="user-plus" style="width: 18px; height: 18px;"></i>
                <span>Registrati</span>
            </button>
        </form>

        <div class="auth-footer">
            <p>Hai già un account? <a href="/login">Accedi</a></p>
        </div>
    </div>
</div>

<script src="/js/auth.js"></script>
